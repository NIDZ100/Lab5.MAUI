<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Lab5.MAUI.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"

             x:Class="Lab5.MAUI.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:SelectedItemEventArgsConverter x:Key="SelectedItemEventArgsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout
    Padding="30,0"
    Spacing="25">
        <Label
        Text="{Binding Title}"
        Style="{StaticResource Headline}"
        SemanticProperties.HeadingLevel="Level1" />

        <Button
        x:Name="CounterBtn"
        Text="Refresh data" 
        SemanticProperties.Hint="Counts the number of times you click"
        Command="{Binding LoadCommand}"
        HorizontalOptions="Fill" />

        <ListView x:Name="Lv1"
              ItemsSource="{Binding Owners}"
              SelectedItem="{Binding SelectedOwner}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="10" Margin="10">
                            <Label Text="{Binding Id}" />
                            <Label Text="{Binding Surname}" />
                            <Label Text="{Binding Height}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Behaviors>
                <toolkit:EventToCommandBehavior
                EventName="ItemSelected"
                Command="{Binding SelectOwnerCommand}"
                EventArgsConverter="{StaticResource SelectedItemEventArgsConverter}" />
            </ListView.Behaviors>
        </ListView>
    </VerticalStackLayout>

</ContentPage>
